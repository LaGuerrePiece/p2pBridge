{
  "compilerOptions": {
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "types": ["@types/node", "@types/chai", "@types/mocha", "@types/jest"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "paths": {
  "@/*": [
      "src/*"
  ]
  },
  "exclude": [
  "node_modules",
  "build",
  "cache",
  "artifacts"
  ],
  "include": [
    "./jest-setup.ts",
      "**/*.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ],
}